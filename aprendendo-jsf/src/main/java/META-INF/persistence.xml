<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="aprendendo-jsf">
		
		<class>br.com.entidades.Pessoa</class>
		<class>br.com.entidades.Lancamento</class>
		<class>br.com.entidades.Estados</class>
		<class>br.com.entidades.Cidades</class>
		<properties>
			
			<!-- Dados de conexão com o banco de dados -->
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
	 	 	<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/aprendendo-jsf"/>  
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.connection.username" value="postgres"/>
			<property name="hibernate.connection.password" value="980704"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			
			<!-- Configurando o pool de conexões -->
			
			<!-- Minimo de conexões ou portas disponíveis -->
			<property name="hibernate.c3p0.min_size" value="5"/>
			
			<!-- Máximo de conexões ou portas disponíveis -->
			<property name="hibernate.c3p0.max_size" value="100"/>
			
			<!-- O número de segundos em que uma conexão inativa é mantida no pool -->
			<property name="hibernate.c3p0.timeout" value="300"/>
			
			<!-- O número tptal de instruções, transações, operações no banco de dados mantida em cache -->
			<property name="hibernate.c3p0.max_statements" value="50"/>
			
			<!-- tempo ocioso em segundos antes de uma conexão ser validada automaticamente -->
			<property name="hibernate.c3p0.idle_test_period" value="120"/>
			
			
		</properties>
		
	
	</persistence-unit>
</persistence>
